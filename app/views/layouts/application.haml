!!!
%html
  %head
    = raw analytical.head_prepend_javascript
    %title= @page_title or 'Easy Days Movers'
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag

    = yield :html_head

    = raw analytical.head_append_javascript
  %body
    = raw analytical.body_prepend_javascript
    .content-wrapper
      .header
        %a#logo{ :href => root_path, :title => 'Easy Days Home' }
          = image_tag('logo.png', :alt => 'Easy Days Logo')
        = image_tag('header-buildings.png')
      .main.clearfix
        .content.left
          = yield
        .sidebar.right
          %ul.nav
            %li= link_to('Home', root_path)
            %li= link_to('Moving Calculator', moving_calculator_path)
            %li= link_to('Staff', staff_path)
            %li= link_to('Moving Tips', moving_tips_path)
            %li= link_to('Operational Radius', radius_path)
            %li= link_to('Hire Us', hire_us_path)
          = yield :sidebar
      .footer.clearfix
        .small.left
          Header image courtesy of
          %a{ :href => 'http://www.freeimages.co.uk' } freeimages.co.uk
        .small.right
          &copy;
          = "#{DateTime.now.year} Easy Days L.L.C."
    = raw analytical.body_append_javascript

